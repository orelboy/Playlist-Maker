<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header">

        <TextView
            android:text="@string/app_name"
            style="@style/HeaderMainStyle" />
    </FrameLayout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="28dp">

        <Button
            android:id="@+id/search"
            android:text="@string/search"
            app:icon="@drawable/light_mode_search"
            style="@style/ButtonMainStyle"/>

        <Button
            android:id="@+id/media_library"
            android:text="@string/media_library"
            app:icon="@drawable/light_mode_media_library"
            style="@style/ButtonMainStyle"/>

        <Button
            android:id="@+id/settings"
            android:text="@string/settings"
            app:icon="@drawable/light_mode_settings"
            style="@style/ButtonMainStyle"/>
    </LinearLayout>

</LinearLayout>