<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/white</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="Theme.Settings" parent="Base.Theme.PlaylistMaker">
    </style>

    <style name="ThemeDefaultWhiteIc" parent="Base.Theme.PlaylistMaker">
    </style>

    <style name="Theme.Search" parent="Base.Theme.PlaylistMaker">
    </style>

    <style name="Theme.SearchString" parent="Theme.Search">
    </style>
    <style name="ThemeBlackWhiteText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ThemeGrayWhiteText">
        <item name="android:textColor">@color/text_gray</item>
    </style>
</resources>