<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderMainStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius_button</item>
    </style>
    <style name="ButtonSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/regular_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ImageSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="HeaderOpenItemMainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/header_start_padding</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ImageInHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>
    <style name="ImageInSearchString">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Track">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SubstringTrack">
        <item name="android:textSize">@dimen/regular_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ButtonUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>
    <style name="ButtonClearHistory" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius_button_clr_history</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="newPlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius_button_newPlaylist</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>
    <style name="TextErrorInternet">
        <item name="android:textSize">@dimen/textError_19sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="headerHistory">
        <item name="android:textSize">@dimen/textError_19sp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="DescriptionsTextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/walkman_descriptions_text_13sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="DescriptionsDataTextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/walkman_descriptions_text_13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ArtistNameTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/walkman_artist_name_text_14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TrackNameTextView">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/walkman_track_name_text_22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ToolbarTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabRippleColor">@color/light_gray</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="MediaLibraryErrorTextView">
        <item name="android:textSize">@dimen/textError_19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/ErrorMarginHorizontal_24dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>